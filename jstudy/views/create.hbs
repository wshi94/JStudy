<form class="form-horizontal" method="POST" action="/lists/create">
  <div class="col-xs-3">
    <div class="col-sm-10">
      <label for="listName">List Name</label>
      <input type="text" name="listName" class="form-control">
    </div>
  </div>
  <div class="col-xs-3">
    <div class="col-sm-10">
      <label for="createdBy">Created By</label>
      <input type="text" name="createdBy" class="form-control">
    </div>
  </div>
  <div class="col-xs-4">
	<label for="wordText">Words to Add (Separate by spaces)</label>
	<textarea class="form-control" name="words" rows="5" placeholder="こんにちわ　私　家　会社"></textarea><br>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Create List</button>
    </div>
  </div>
</form>