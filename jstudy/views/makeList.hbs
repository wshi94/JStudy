<h3>{{heading}}</h3>
<p>
        {{#each list.words}}
        <ul>
            {{word}}
        </ul>
        {{/each}}
</p>


<form class="form" method="POST" action="/word/create">
  <div class="col-xs-3">
    <div class="col-sm-10">
       <label>Word</label>
       <input type="text" name="word" class="form-control">
    </div>
  </div>
  <div class="col-xs-3">
    <div class="col-sm-10">
      <label>Part of Speech</label>
      <input type="text" name="partOfSpeech" class="form-control">
    </div>
  </div>
  <div class="col-xs-4">
    <label>Definition</label>
	<textarea class="form-control" name="definition" rows="5"></textarea><br>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Add Word to List</button>
    </div>
  </div>
  <input type="hidden" name="slug" value={{list.slug}}>
</form>